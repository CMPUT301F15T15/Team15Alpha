<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skilltradiez.skilltraderz.MainActivity">

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/search_button"
        android:layout_weight="0.75"
        android:hint="@string/search_field_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#629595" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.51"
        android:background="@drawable/button_with_border"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/search_button"
        android:onClick="beginRefinedSearch"/>

    <Button
        android:id="@+id/browse_skillz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:background="@drawable/button_with_border"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/browse_skillz"
        android:onClick="beginAllSearch"
        android:layout_below="@+id/search_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/browse_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_with_border"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/browse_users"
        android:onClick="beginAllSearch"
        android:layout_below="@+id/browse_skillz"
        android:layout_alignStart="@+id/browse_skillz"
        android:layout_marginTop="38dp" />

    <Button
        android:id="@+id/go_to_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/browse_users"
        android:layout_alignStart="@+id/browse_users"
        android:layout_below="@+id/browse_users"
        android:layout_marginTop="37dp"
        android:background="@drawable/button_with_border"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/your_profile"
        android:onClick="showProfile"/>

    <Button
        android:id="@+id/add_a_new_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/go_to_profile"
        android:layout_alignStart="@+id/go_to_profile"
        android:layout_below="@+id/go_to_profile"
        android:layout_marginTop="37dp"
        android:background="@drawable/button_with_border"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/add_a_new_skill"
        android:onClick="createNewSkill"/>


</RelativeLayout>
