<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skilltradiez.skilltraderz.EditSkill">

    <EditText
        android:id="@+id/new_skill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/new_skill_name"
        android:maxLength="40"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#057777" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/horizontalScrollView2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/new_skill_name"
        android:background="@drawable/button_with_border"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/add_skill_to_database">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_below="@+id/button"
                android:layout_toStartOf="@+id/is_visible" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Image"
        android:id="@+id/button"
        android:layout_below="@+id/new_skill_name"
        android:layout_alignParentStart="true"
        android:onClick="addNewImage"
        android:layout_alignStart="@id/horizontalScrollView2"
        android:layout_toStartOf="@+id/horizontalScrollView2"
        android:layout_above="@+id/new_skill_description" />

    <EditText
        android:id="@+id/new_skill_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="@string/new_skill_description"
        android:inputType="textMultiLine"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#057777"
        android:layout_above="@+id/category_spinner"
        android:layout_below="@+id/horizontalScrollView2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_visible"
        android:id="@+id/is_visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:checked="true" />

    <Button
        android:id="@+id/add_skill_to_database"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_with_border"
        android:layout_alignParentStart="true"
        android:onClick="addNewSkill"
        android:text="@string/add_skill" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/add_skill_to_database"
        android:layout_alignParentStart="true" />

</RelativeLayout>
