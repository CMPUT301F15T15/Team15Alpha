<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skilltradiez.skilltraderz.SettingsActivity">


    <TextView
        android:id="@+id/settings_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/mainSkillAppColor"
        android:text="@string/settings_username"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/mainTextColor" />

    <TextView
        android:id="@+id/settings_user_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings_username"
        android:layout_marginTop="36dp"
        android:text="@string/settings_usercity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/mainSkillAppColor" />

    <EditText
        android:id="@+id/settings_user_city_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings_user_desc"
        android:hint="City"
        android:inputType="textMultiLine"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/mainTextColor" />

    <TextView
        android:id="@+id/settings_user_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings_user_city_field"
        android:layout_marginTop="48dp"
        android:text="@string/settings_usercontact"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/mainSkillAppColor" />

    <EditText
        android:id="@+id/settings_user_contact_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings_user_contact"
        android:hint="Email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/mainTextColor" />

    <CheckBox
        android:id="@+id/settings_picture_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_download_pics"
        android:textColor="@color/mainSkillAppColor"
        android:layout_above="@+id/settings_save_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp" />

    <Button
        android:id="@+id/settings_save_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:onClick="saveSettings"
        android:textColor="@color/listLightYellow"
        android:background="@drawable/button_with_border"
        android:text="@string/settings_save_changes" />


</RelativeLayout>


