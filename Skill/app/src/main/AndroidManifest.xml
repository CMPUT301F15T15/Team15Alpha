<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skilltradiez.skilltraderz" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".SearchScreenActivity"
            android:label="@string/title_activity_search_screen" >
        </activity>
        <activity
            android:name=".InventoryActivity"
            android:label="@string/title_activity_inventory" >
        </activity>
        <activity
            android:name=".TradeRequestActivity"
            android:label="@string/title_activity_trade_request" >
        </activity>
        <activity
            android:name=".SkillDescriptionActivity"
            android:label="@string/title_activity_skill_description" >
        </activity>
        <activity
            android:name=".EditTradeActivity"
            android:label="@string/title_activity_edit_trade" >
        </activity>
        <activity
            android:name=".EditSkillActivity"
            android:label="@string/title_activity_edit_skill" >
        </activity>
    </application>

</manifest>
